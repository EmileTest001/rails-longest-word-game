<h1>Longest Word Game - Page New</h1>

<h2>New game</h2>

<div>
  <%= @letters %>
</div>

<div>
  <form action="/score" method="post">
    <%= hidden_field_tag :random_letters, @letters %>

    <label for="your-word">What is the longest word you can find?</label>
    <input type="text" id="your-word" name="word">
    <input type="submit" value="Play">

    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  </form>
</div>
